- model_class = Billboard
.page-header
  %h1=t '.title', default: model_class.model_name.human.titleize
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:content)
    %dd
      %pre.prettyprint= @billboard.content

.form-group
  = link_to t('.back', default: t("helpers.links.back")), billboards_path, class: 'btn btn-default'
  = link_to t('.edit', default: t("helpers.links.edit")), edit_billboard_path(@billboard), class: 'btn btn-default'
  = link_to t('.destroy', default: t("helpers.links.destroy")), billboard_path(@billboard), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'