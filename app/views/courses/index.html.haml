%h1 Listing courses

%table
  %thead
    %tr
      %th Academic process
      %th Subject
      %th Offer as pci
      %th
      %th
      %th

  %tbody
    - @courses.each do |course|
      %tr
        %td= course.academic_process
        %td= course.subject
        %td= course.offer_as_pci
        %td= link_to 'Show', course
        %td= link_to 'Edit', edit_course_path(course)
        %td= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }

