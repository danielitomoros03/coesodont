%table.no_border{style: 'width: 250px'}
	%tr.text-center
		%th{colspan: "2"} Promedios:
	%tr
		%td.text-end Simple Total:
		%td.text-end.fw-bold= grade.simple_average
	%tr
		%td.text-end Simple Aprobado:
		%td.text-end.fw-bold= grade.calculate_average_approved
	%tr
		%td.text-end Ponderado Total:
		%td.text-end.fw-bold= grade.weighted_average
	%tr
		%td.text-end Ponderado Aprobado:
		%td.text-end.fw-bold= grade.calculate_weighted_average_approved
