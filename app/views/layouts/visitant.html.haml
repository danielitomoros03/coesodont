%html{ lang: "#{I18n.locale}"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title COES - ODONT | Bienvenido
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = stylesheet_link_tag "fontawesome", "data-turbo-track": "reload"
    =# stylesheet_link_tag "style", "data-turbo-track": "reload", id: 'style-switch'
    = stylesheet_link_tag "style-dark", "data-turbo-track": "reload", id: 'style-switch'
    = javascript_include_tag "application", "data-turbo-track": "reload", defer: true
    = favicon_link_tag 'ico_logo.png'

  %body
    %main
      = render "shared/flashes"
      .container-fluid
        .row
          .col.min-vh-100.p-3
            = yield
